package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        int z;
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите a,b,c: ");
        int a = scan.nextInt();
        int b = scan.nextInt();
        int c = scan.nextInt();
        z = ((a-3)*b/2) + c;
        System.out.println(z);
    }
}
