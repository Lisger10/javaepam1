package com.company;
public class train {
    public static void main(String[] args) {
        int []arr = new int[]{1,2,3,4,5,6,7,8};{
          for(int i =1;i<arr.length;i++){
              if(arr[i]%2==0){
                  arr[i]=0;
              }
              System.out.println(arr[i]);
          }
        }

    }
}
